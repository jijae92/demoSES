# Keywords to monitor (comma separated)
KEYWORDS="parp, isg, interferon, sting"
MATCH_MODE="OR"
WINDOW_HOURS="24"
SOURCES="crossref,pubmed,rss"

# Amazon SES SMTP configuration
SMTP_HOST="email-smtp.us-east-1.amazonaws.com"
SMTP_PORT="587"
SMTP_USER="your_ses_smtp_username"
SMTP_PASS="your_ses_smtp_password"
EMAIL_FROM="alerts@example.com"
EMAIL_TO="alice@example.com,bob@example.com"

# Execution interval for continuous mode (minutes)
INTERVAL_MINUTES="30"

# Optional application identification
APP_NAME="paper-watcher"
APP_EMAIL="you@example.com"

# Optional custom database path
# DATABASE_PATH="data/seen.db"