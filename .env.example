# Environment Configuration for Paper Watcher
# Copy this file to .env and fill in your actual credentials

# Common Settings
TZ=Asia/Seoul

# Bing Search API (optional - only required if provider="bing" in config.yaml)
BING_API_KEY=your_bing_api_key_here

# AWS Credentials for SES Email Delivery
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# AWS SES SMTP Credentials (alternative to SES API)
# Uncomment these if using SMTP instead of SES API
# SMTP_HOST=email-smtp.ap-northeast-2.amazonaws.com
# SMTP_PORT=587
# SMTP_USER=your_ses_smtp_username
# SMTP_PASS=your_ses_smtp_password

# DynamoDB Configuration (if using AWS-based deduplication)
DDB_TABLE=paper_seen

# Secrets Manager (for production deployments)
SES_SECRET_NAME=paperwatcher/ses
API_SECRET_NAME=paperwatcher/api

# Legacy Environment Variables (backward compatibility)
# These are overridden by config.yaml when present
KEYWORDS="parp, isg, interferon, sting"
MATCH_MODE="OR"
WINDOW_HOURS="24"
SOURCES="crossref,pubmed,rss"
APP_NAME="paper-watcher"